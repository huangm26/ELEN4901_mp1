<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Please Choose an animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="32sp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mouse"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:background="@drawable/mouse" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cat"
        android:layout_below="@+id/mouse"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/cat" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/elephant"
        android:layout_below="@+id/cat"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/elephant" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/mouse"
        android:layout_toEndOf="@+id/mouse" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/result"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginBottom="50dp"
        android:layout_alignEnd="@+id/title"
        android:background="#edf84a" />


</RelativeLayout>
